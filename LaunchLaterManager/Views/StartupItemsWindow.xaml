<Window x:Class="LaunchLaterManager.Views.StartupItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartupItemsWindows" Height="300" Width="300">
    <Window.Resources>
        <DataTemplate x:Key="StartupItemTemplate">
            <TextBlock Text="{Binding Name}" Foreground="White" ></TextBlock>
        </DataTemplate>
    </Window.Resources>
    <Grid Loaded="Grid_Loaded">

        <ListBox ItemsSource="{Binding StartupItems}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" 
                          Content="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
